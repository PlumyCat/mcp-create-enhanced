{
    "mcpServers": {
        "mcp-create": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-v",
                "mcp-create-data:/app/data",
                "--name",
                "mcp-create-session",
                "--stop-timeout",
                "5",
                "mcp-create"
            ],
            "env": {
                "MCP_CREATE_DATA_DIR": "/app/data"
            }
        }
    }
}