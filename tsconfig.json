{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build", // Changé de dist à build
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "**/*.ts"
  ], // Inclure tous les fichiers .ts des sous-répertoires
  "exclude": [
    "node_modules",
    "build"
  ] // Destinations d'exclusion également modifiées
}